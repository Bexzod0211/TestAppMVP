<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".ui.test.TestActivity"
    android:background="@drawable/bg_image">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:backgroundTint="@color/color_game2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                app:tint="@color/black" />
            <TextView
                android:id="@+id/txt_app_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Java"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:gravity="center"
                />
            <Space
                android:layout_width="42dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/txt_question_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2 of 10"
        android:layout_gravity="center|top"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="7dp"
        android:textSize="32sp"
        android:layout_marginEnd="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="90dp"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp">



                <!--<TextView
                    android:id="@+id/txt_question_pos"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    tools:text="8/10"
                    android:background="@drawable/shape_count_test"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:elevation="8dp"
                    />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        app:cardCornerRadius="30dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_game3"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Savol"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:layout_marginTop="15dp"

                                />
                            <TextView
                                android:id="@+id/txt_question"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="Javada primitive toifalar deb nimaga aytiladi?"
                                android:paddingTop="5dp"
                                android:paddingBottom="15dp"
                                android:paddingHorizontal="15dp"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"
                                android:textSize="18sp"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="15dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_game3">


                            <TextView
                                android:paddingStart="25dp"
                                android:id="@+id/radio1"
                                android:textSize="18sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="String"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingEnd="15dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="15dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_game3">


                            <TextView
                                android:paddingStart="25dp"
                                android:id="@+id/radio2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="Integer"
                                android:paddingTop="15dp"
                                android:textSize="18sp"
                                android:paddingBottom="15dp"
                                android:paddingEnd="15dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="15dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_game3">


                            <TextView
                                android:id="@+id/radio3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="25dp"
                                android:paddingTop="15dp"
                                android:textSize="18sp"
                                android:paddingEnd="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                tools:text="int" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="15dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_game3">


                            <TextView
                                android:id="@+id/radio4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:text="Boolean"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:paddingEnd="15dp"
                                android:paddingStart="25dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

    </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_full"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/draw_btn_next"
            android:text="Next"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/draw_skip_next"
            android:text="Skip"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_check"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/draw_btn_next"
            android:text="Check"
            android:textColor="@color/white"
            android:enabled="false"
            />

    </LinearLayout>
</FrameLayout>